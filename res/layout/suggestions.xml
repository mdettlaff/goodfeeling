<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#2e3436"
	android:paddingTop="10sp">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="Suggestions" android:textSize="9pt"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:paddingTop="10sp"
			android:paddingLeft="10sp" />
		<LinearLayout android:layout_weight="0.2"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="right">
			<LinearLayout android:orientation="vertical"
				android:gravity="center_horizontal" android:layout_width="75sp"
				android:layout_height="wrap_content">
				<ImageButton android:layout_height="wrap_content"
					android:padding="0sp" android:id="@+id/help_btn" android:src="@drawable/help"
					android:layout_width="wrap_content"></ImageButton>
				<TextView android:text="@string/gui_title_help"
					android:gravity="center_horizontal" android:layout_width="50sp"
					android:layout_height="wrap_content" android:textColor="#ffffff" />
			</LinearLayout>
			<LinearLayout android:orientation="vertical"
				android:gravity="center_horizontal" android:layout_width="75sp"
				android:layout_height="wrap_content">
				<ImageButton android:layout_height="wrap_content"
					android:padding="0sp" android:id="@+id/manual_btn" android:src="@drawable/manual"
					android:layout_width="wrap_content"></ImageButton>
				<TextView android:text="@string/gui_title_manual"
					android:gravity="center_horizontal" android:layout_width="50sp"
					android:layout_height="wrap_content" android:textColor="#ffffff" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<TextView android:text="Click to generate suggestions. This may take few minutes."
		android:id="@+id/SuggestionsNote" android:textSize="9pt"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="#ffffff"></TextView>
	<TextView android:text="Please wait..." android:id="@+id/SuggestionsWait"
		android:visibility="invisible" android:textSize="9pt" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="#ffffff"></TextView>
	<Button android:text="Save" android:id="@+id/start"
		android:layout_width="100px" android:layout_height="wrap_content"></Button>
	<TextView android:text="" android:id="@+id/SuggestionsContent"
		android:textSize="9pt" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="#ffffff"></TextView>
</LinearLayout>
